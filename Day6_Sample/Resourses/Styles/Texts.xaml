<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- -->
    <Style TargetType="{x:Type TextBlock}" x:Key="Title">
        <Setter Property="FontSize"
                Value="32"/>
        <Setter Property="FontWeight"
                Value="Bold"/>
        <Setter Property="Foreground"
                Value="{DynamicResource ForeLinear}"/>
        <Setter Property="HorizontalAlignment"
                Value="Center"/>
        <Setter Property="VerticalAlignment"
                Value="Center"/>
    </Style>

    <!-- -->
    <Style TargetType="TextBlock" x:Key="TextBlockBase">
        <Setter Property="FontFamily"
                Value="{DynamicResource FontFamily}"/>
    </Style>


    <LinearGradientBrush x:Key="ForeLinear"  EndPoint="0, 0" StartPoint="0, 1">
        <GradientStop Color="#22822C" Offset="0" />
        <GradientStop Color="#7EB512" Offset="1" />
    </LinearGradientBrush>
</ResourceDictionary>